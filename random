# Identify likely category/type column and print unique values with counts
category_col = None
for col in ['type', 'category', 'prod_type']:
    if col in df_access.columns:
        category_col = col
        break

if category_col:
    print(f"\nUnique Categories in Access Product (from '{category_col}' column):")
    category_counts = df_access[category_col].value_counts(dropna=True).reset_index()
    category_counts.columns = [category_col, 'Count']
    print(category_counts.to_string(index=False))
else:
    print("\nNo obvious category/type column found. Please check column names.")
