import pandas as pd


file_path = 'your_file.csv'  # Replace with your file name
df = pd.read_csv(file_path)


print(f"Original Data Shape: {df.shape[0]} rows × {df.shape[1]} columns")


df_filtered = df[df['productflag'].astype(str).str.strip().str.lower() == 'access']


print(f"Filtered (productflag = 'Access') Shape: {df_filtered.shape[0]} rows × {df_filtered.shape[1]} columns")


output_file = "filtered_productflag_access.xlsx"
df_filtered.to_excel(output_file, index=False)
print(f"Filtered file saved as: {output_file}")
