# Set the threshold for dropping low-variance flags
low_threshold = 0.03  # Drop if True < 3%
high_threshold = 0.97  # Drop if True > 97%

keep_flags = []
drop_flags = []

print("\nüîç Binary Flag Distribution Check:")
for col in binary_columns:
    true_pct = df[col].mean()
    false_pct = 1 - true_pct
    print(f"{col:<50} ‚ûú True: {true_pct*100:.2f}% | False: {false_pct*100:.2f}%")
    
    if true_pct < low_threshold or true_pct > high_threshold:
        drop_flags.append(col)
    else:
        keep_flags.append(col)

# Summary
print("\n Drop These Flags (Low Info):")
print(drop_flags)

print("\n Keep These Flags (Good Variation):")
print(keep_flags)
