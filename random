import pandas as pd

file_path = 'your_file.csv'  
chunk_size = 50000

df_header = pd.read_csv(file_path, nrows=0)
all_columns = df_header.columns.tolist()
print("ğŸ“‹ Total Columns:", len(all_columns))

chunk = pd.read_csv(file_path, usecols=all_columns, nrows=chunk_size)
print(f"\nâœ… Loaded sample chunk of shape: {chunk.shape}")

display(chunk.head(5))

output_file = 'sample_50000.xlsx'
chunk.to_excel(output_file, index=False)
print(f"ğŸ“ Sample saved to '{output_file}'")

