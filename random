import pandas as pd
from IPython.display import display, HTML

file_path = 'your_file.csv' 

# Step 1: Get all columns
df_header = pd.read_csv(file_path, nrows=0)
all_columns = df_header.columns.tolist()
print("ðŸ“‹ Total Columns:", len(all_columns))

# Optional: print column names
# for col in all_columns:
#     print(col)

# Step 2: Load first 50 rows
df_sample = pd.read_csv(file_path, usecols=all_columns, nrows=50)

# Step 3: Show full table (not truncated)
pd.set_option('display.max_columns', None)      # Show all columns
pd.set_option('display.max_rows', None)         # Show all rows (limited by df_sample size)
pd.set_option('display.width', None)            # Disable width wrapping
pd.set_option('display.colheader_justify', 'left')

# Step 4: Render as HTML table in full
display(HTML(df_sample.to_html(index=False)))
