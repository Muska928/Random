import pandas as pd

# Load the Excel file (replace with the correct file path)
df = pd.read_excel('/mnt/data/your_input_file.xlsx')

# Group by 'ECI ID' and concatenate the text for each column
df_combined = df.groupby('ECI ID').agg(lambda x: ' '.join(map(str, x))).reset_index()

# Save the combined data to a new Excel file
df_combined.to_excel('/mnt/data/combined_output.xlsx', index=False)

print("Data combined and saved to 'combined_output.xlsx'")
