# ---- Step to check for empty rows in 'non_rst_data' ----

# Check for empty rows in 'combined_text' after filtering 'RST'
empty_rows_combined_text = non_rst_data[non_rst_data['combined_text'].isna() | (non_rst_data['combined_text'].str.strip() == '')]

# Check for empty rows in other specific columns if needed (e.g., 'record_comment_text', 'executive_summary_text')
empty_rows_record_comment = non_rst_data[non_rst_data['record_comment_text'].isna() | (non_rst_data['record_comment_text'].str.strip() == '')]
empty_rows_executive_summary = non_rst_data[non_rst_data['executive_summary_text'].isna() | (non_rst_data['executive_summary_text'].str.strip() == '')]

# Print counts of empty rows for each column
print(f"Total empty rows in 'combined_text': {len(empty_rows_combined_text)}")
print(f"Total empty rows in 'record_comment_text': {len(empty_rows_record_comment)}")
print(f"Total empty rows in 'executive_summary_text': {len(empty_rows_executive_summary)}")

# Print the total number of rows in 'non_rst_data' after excluding the empty rows (if necessary)
print(f"Total rows for analysis after excluding empty rows (if applicable): {len(non_rst_data)}")
